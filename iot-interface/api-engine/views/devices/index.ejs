<%- include ('./../partials/header'); %> 
    <main class="container" style="margin-top: 100px;">

            <div class="row row-cols-4">
                <% devices.forEach((device)=>{ %>
                <div class="col">
                    <div class="card" style="width: 18rem; margin: 3rem;">
                        <div class="card-body">
                            <h5 class="card-title"><%= device.user %></h5>
             
                            <p class="card-paragraph"><strong>MAC: </strong> <%= device.mac %></p>
                            <p class="card-paragraph"><strong>IP: </strong><%= device.ip %></p>
                            <p class="card-paragraph"><strong>Data: </strong><%= device.data %></p>
                            <p class="card-paragraph"><strong>Device: </strong><%= device.device %></p>
                            <p class="card-paragraph"><strong>Protocol: </strong><%= device.protocol %></p>
                            <p class="card-paragraph"><strong>Port: </strong><%= device.port %></p>

                            <strong>Token:</strong>
                            <p class="card-paragraph"><%= device.token %></p>
                       
                            <form action="/devices?_method=DELETE" method="POST">
                                <input type="hidden" value="<%= device._id %>" name="id">
                                <a href="/devices/<%=device._id %>/update" class="btn btn-secondary">Update</a>
                                <button type="submit" class="btn btn-danger">delete</button>
                            </form>
                       
                        </div>
                    </div>
                </div>
                <%  }) %>
    
                <div class="col">
                    <div class="card" style="width: 18rem; margin: 3rem;">                        <div class="card-body">
                            <h5 class="card-title">Add a new device</h5>
                            <a href="/devices/new" class="btn btn-primary">Add</a>
                        </div>
                    </div>
                </div>
    
            </div>

      
      </main><!-- /.container -->
      
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

