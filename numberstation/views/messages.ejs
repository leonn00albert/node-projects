<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>#Number Station</title>
  </head>
  <body>
    <div class="container">
        <div class="card m-5">
            <div class="card-body">
              <h1>Find Your Messages</h1>
              <p>Get Started now and communicate anonymous and secure.</p>
              <a href="/" class="btn btn-primary">Back</a>

              <form action="/messages" method="POST">
                <div class="input-group mt-4 mb-4">
                    <span class="input-group-text" id="basic-addon1">@</span>
                    <input type="text" class="form-control" placeholder="ID" name="user_id" aria-label="Username" aria-describedby="basic-addon1">
                  </div>
                  <button type="submit" class="btn btn-primary">Retrieve Messages</button>
              </div>
        
            </form>
            </div>
            <div class="card m-5">
                <div class="card-body">
                  <h3>Most Recent Messages</h3>
                  <div class="card m-5">
                    <div class="card-body">
                   
                        
                    
                  <% for (i = 0; i < mes.length ; i++){%>
                    <form action="/decrypt" method="POST">
                    <h4 class="mt-3"><strong><a href="#"><%= mes[i].user_id%> </a></strong></h4>
                    <p><%= mes[i].body%> </p>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@</span>
                        <input hidden name="body" value="<%= mes[i].body %>">
                        <input hidden name="id" value="<%= mes[i]._id %>">
                        <input type="text" class="form-control" placeholder="Private Key" name="key" aria-label="Username" aria-describedby="basic-addon1">
                      </div>
                      <button type="submit" class="btn btn-primary">Decrypt</button>
             
                </form>
                <hr>
                 <% } %> 
                    </div>
    
                    </div>
    
                </div>
              </div>
          </div>
         

          

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

